@model Product_Management.Models.Dto.UpdateUserDto;

@{
    ViewData["Title"] = "Update User";
   
}

<h2 style="margin-top:10%">Update User</h2>

<form asp-action="UpdateUser" method="post" enctype="multipart/form-data" asp-controller="Admin" class="needs-validation" novalidate>
   @*  <div class="mb-3">
        <label for="UserId" class="form-label">User Id</label>
        <input asp-for="UserId" class="form-control" readonly />
