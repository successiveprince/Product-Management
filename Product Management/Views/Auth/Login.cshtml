@model Product_Management.Models.Dto.LoginModel;

<partial name="Notification" />
<section class="vh-100" style="background-color: #fff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://img.freepik.com/free-vector/online-shopping-banner-mobile-app-templates-concept-flat-design_1150-34862.jpg?w=740&t=st=1706173524~exp=1706174124~hmac=f41dd718491e9d4ebb6ea539683b425add6c6b30ec4d774e7e0c4030e90bb30c"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;height: 100%" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post" asp-action="Login" asp-controller="Auth">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x " style="color: #ff6219;"></i>
                                        <span class="h2 fw-bold mb-0">Welcome to Trendy Treasures</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login into your account</h5>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="form2Example17" class="form-control form-control-lg" asp-for="UserEmail" required />
                                        <label class="form-label" for="form2Example17">Email address</label>
                                        <span asp-validation-for="UserEmail" class="text-danger"></span> 
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="UserPassword" required />
                                        <label class="form-label" for="form2Example27">Password</label>
                                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                                        <div class="password-toggle">
                                            <input type="checkbox" onclick="togglePasswordVisibility()" id="showPassword" />
                                            <label for="showPassword">View Password</label>
                                        </div>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class=" btn btn-outline-dark">Login</button>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account?
                                        <a asp-controller="Auth" asp-action="Register" style="color: #393f81;">Register here</a>
                                    </p>

                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        // Function to toggle password visibility
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById('form2Example27');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        }
    </script>
}
<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("form2Example27");
        var showPasswordCheckbox = document.getElementById("showPassword");

        if (showPasswordCheckbox.checked) {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>
<script>
    if (performance.navigation.type == 2) {
        location.reload();
    }
</script>
