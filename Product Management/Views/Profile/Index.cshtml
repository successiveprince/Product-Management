    <style>
        body {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            align-items: center;
            justify-content: center;
            background-color: #f2f2f2;
            min-height: 100vh;
            margin: 0;
            display: flex;
        }

        .card {
            padding: 2.5rem 2rem;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.8);
            max-width: 500px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            margin: 1rem auto;
            position: relative;
            transform-style: preserve-3d;
            overflow: hidden;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card::before,
            .card::after {
                content: '';
                position: absolute;
                z-index: -1;
            }

            .card::before {
                width: 100%;
                height: 100%;
                border: 1px solid #FFF;
                border-radius: 10px;
                top: -0.7rem;
                left: -0.7rem;
            }

            .card::after {
                content: '';
                height: 15rem;
                width: 15rem;
                background-color: #4172f5aa;
                top: -8rem;
                right: -8rem;
                box-shadow: 2rem 6rem 0 -3rem #FFF;
                border-radius: 50%;
            }

            .card img {
                width: 8rem;
                min-width: 80px;
                box-shadow: 0 0 0 5px #FFF;
                border-radius: 50%;
            }

        .infos {
            margin-left: 1.5rem;
        }

        .name {
            margin-bottom: 1rem;
        }

            .name h2 {
                font-size: 1.3rem;
                color: #333;
                margin-bottom: 0.3rem;
            }

            .name h4 {
                font-size: 0.8rem;
                color: #555;
            }

      

        .stats {
            margin-top:40px;
            margin-bottom: 1rem;
            margin-left: -32px;
            display: flex;
            justify-content: space-between;
            list-style: none;
        }

            .stats li {
                min-width: 5rem;
                text-align: center;
            }

                .stats li h3 {
                    font-size: 0.99rem;
                    color: #333;
                    margin-bottom: 0.3rem;
                }

                .stats li h4 {
                    font-size: 0.75rem;
                    color: #555;
                    margin-top: 0.5rem; /* Add spacing between email, phone, and password */
                }

        .links {
           /*  border:1px solid black; */
            margin-top: 2rem;
            display: flex;
            gap: 2rem;
            justify-content:center;
        }

        .instagram {
